
@model List<InternsModel>


<div class="text-center">
    <h1 class="display-4 mb-5">Current Enrolled Interns</h1>
    <div class="my-5">
        <table class="table table-sm table-bordered table-striped" id="tblIndex">
            <thead>
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Department</th>
                    <th scope="col">Degree Plan</th>
                    <th scope="col">Role</th>
                    <th scope="col">PGIP Email</th>
                    <th scope="col">Start Date</th>
                    <th scope="col">End Date</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td>@Model[i].FirstName</td>
                        <td>@Model[i].LastName</td>
                        <td>@Model[i].Department</td>
                        <td>@Model[i].DegreePlan</td>
                        <td>@Model[i].Role</td>
                        <td>@Model[i].InternshipEmail</td>
                        <td>@Model[i].StartDate.Value.ToString("MM-dd-yyyy")</td>
                        <td>@Model[i].EndDate.Value.ToString("MM-dd-yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="my-5">
        <label style="font-size: 30px"><i>New Intern?</i></label>
        @if (Context.Session.GetInt32("AdminId") != null)
        {
            <div class="my-2">
                <a class="btn btn-primary" asp-action="Registration" asp-controller="Intern" style="width: 20%" role="button">Click Here!</a>
            </div>
        }
        else
        {
            <div class="my-2">
                <a class="btn btn-primary" asp-action="LogIn" asp-controller="Home" style="width: 20%"  role="button">Click Here to log in!</a>
            </div>
        }
    </div>
</div>

@section Scripts 
{
    <script>
        $(()=>{
            $('#tblIndex').DataTable();
        })
    </script>
}

