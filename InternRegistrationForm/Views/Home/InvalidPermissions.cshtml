@{
}
@model InvalidPermissionsViewModel

@if (@Model.currentAdmin != null)
{<div>
    <h1>Hey there, @Model.currentAdmin!</h1>
</div>
}
else
{
<div>
    <h1>Hey there!</h1>
</div>    
}

<div>
    <p>It seems that you don't have access to that page just yet!</p>
    <p>If you think you should have access to that page, contact the administrators of PGIP!</p>
</div>
<div>
    <h4>The current administrators are listed below:</h4>
</div>

 <div class="my-5">
        <table class="table table-sm table-bordered table-striped" id="tblAdminIndex">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Department</th>
                    <th scope="col">PGIP Email</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Admins.Count(); i++)
                {
                    if (Model.Admins[i].PermissionsLevel < 2)
                    {
                        continue;
                    }
                    else
                    {
                        var indexOffset = i + 1; 
                        <tr>
                            <th scope="row">@indexOffset</th>
                            <td>@Model.Admins[i].FirstName</td>
                            <td>@Model.Admins[i].LastName</td>
                            <td>@Model.Admins[i].Department</td>
                            <td>@Model.Admins[i].InternshipEmail</td>
                        </tr> 
                    }
                }
            </tbody>
        </table>
    </div>
        <div style="text-align: center">
                 <a class="btn btn-primary" style="width: 20%" asp-action="AdminIndex" asp-controller="Admin" role="button">Return Home</a>
        </div>


@section Scripts 
{
    <script>
        $(()=>{
            $('#tblAdminIndex').DataTable();
        })
    </script>
}