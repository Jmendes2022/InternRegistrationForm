@{
}

@model List<InternsModel>
<div class="text-center">
    <h1 class="display-4 mb-5">All Archived Interns</h1>    
    <div class="my-5">
        <table class="table table-sm table-bordered table-striped" id="tblArchivedInterns">
            <thead>
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Department</th>
                    <th scope="col">Degree Plan</th>
                    <th scope="col">Role</th>
                    <th scope="col">PGIP Email</th>
                    <th scope="col">Start Date</th>
                    <th scope="col">End Date</th>
                </tr>
            </thead>
            <tbody>         
                @for (var i = 1; i < Model.Count(); i++)
                {
                    <tr>
                        <td>@Model[i].FirstName</td>
                        <td>@Model[i].LastName</td>
                        <td>@Model[i].Department</td>
                        <td>@Model[i].DegreePlan</td>
                        <td>@Model[i].Role</td>
                        <td>@Model[i].InternshipEmail</td>
                        <td>@Model[i].StartDate.Value.ToString("MM-dd-yyyy")</td>
                        <td>@Model[i].EndDate.Value.ToString("MM-dd-yyyy")</td>
                    </tr>
                }  
            </tbody>
        </table>
    </div>
    <div style="text-align: center;">
        <a class="btn btn-primary" style="width: 20%" asp-action="AdminIndex" role="button">Return Home</a>
    </div>
</div>

@section Scripts 
{
    <script>
        $(()=>{
            $('#tblArchivedInterns').DataTable();
        })
    </script>
}